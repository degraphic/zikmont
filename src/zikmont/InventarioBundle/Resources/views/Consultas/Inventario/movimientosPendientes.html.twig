{% extends 'zikmontFrontEndBundle::layout_app.html.twig' %}
{% block content %}   

    <div class="page-header">
        <h1>Movimientos pendientes: </h1>
    </div>              
    
    <table  class="table table-striped table-bordered table-condensed">

        <tr>
            <th>ID</th>
            <th>NÃºmero</th>
            <th>Fecha</th>
            <th>Nit</th>            
            <th>Cliente</th>            
            <th>Comentarios</th>
            <th>Total</th>
            <th>Detalles</th>
            <th>Detalles Pendientes</th>
        </tr>

        {% for movimiento in arMovimientos %}

        <tr>
            <td>{{ movimiento.codigoMovimientoPk }}</td>
            <td>{{ movimiento.numeroMovimiento | number_format(0)}}</td>
            <td>{{ movimiento.fecha |date("Y/m/d")  }}</td>
            <td>{{ movimiento.codigoTerceroFk }}</td>  
            <td>{{ movimiento.terceroRel.nombreCortoTercero }}</td>  
            <td>{{ movimiento.comentarios}}</td>
            <td>{{ movimiento.subtotal | number_format(2, '.', ',')}}</td>            
            <td style="text-align: center"><a href="{{ path('movimientosdetalle', { 'codigoMovimiento': movimiento.codigoMovimientoPk }) }}"><IMG SRC="{{ asset('bundles/zikmont/imagenes/tema1/glyphicons_152_new_window.png') }}" WIDTH=20 HEIGHT=20></a></td>
            <td style="text-align: center"><a href="{{ path('movimientospendientesdetalle', { 'codigoMovimiento': movimiento.codigoMovimientoPk }) }}"><IMG SRC="{{ asset('bundles/zikmont/imagenes/tema1/glyphicons_152_new_window.png') }}" WIDTH=20 HEIGHT=20></a></td>
        </tr>

            {% endfor %}            

    </table>        
    <br />               
</div>
{% endblock %}
