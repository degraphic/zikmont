{% extends 'zikmontFrontEndBundle::layout_app.html.twig' %}
{% block content %}
<br>
<!-- <div class="section"> -->
<!--    <div class="section-header"><h3>Lista de documentos</h3></div> -->
    <h3>Lista de documentos</h3>
    <hr>
    <table  class="table table-striped table-bordered table-condensed"> 
        <tr>
            <th>ID</th>
            <th></th>
            <th>Nombre</th>                
            <th>Op</th>
            <th>Consecutivo</th>

            <th></th>
            <th></th>
        </tr>
        {% for documento in arDocumentos %}
        {% if intCodigoSubtipo != documento.codigoDocumentoSubtipoFk %}
        <tr> 
            <td id="suptipo" colspan="20">{{ documento.documentoSubtipoRel.nombre }}</td>
        </tr>
        {% set intCodigoSubtipo = documento.codigoDocumentoSubtipoFk %}
        {% endif %}            
        <tr>
            <td>{{ documento.codigoDocumentoPK }}</td>
            <td>{{ documento.abreviatura }}</td>
            <td>{{ documento.nombre }}</td>
            <td>{{ documento.operacionInventario }}</td>                 
            <td>{{ documento.consecutivo }}</td>                 
            <td style="text-align: center"><a href="{{ path('inventario_movimientos_lista', { 'codigoDocumento': documento.codigoDocumentoPK }) }}"><IMG SRC="{{ asset('bundles/zikmont/imagenes/tema1/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>
            <td style="text-align: center"><a  id="{{ path('inventario_movimientos_nuevo',{'codigoDocumento': documento.codigoDocumentoPK}) }}" href="#" data-reveal-id="nuevoMovimientoModal" data-animation="fade"><IMG SRC="{{ asset('bundles/zikmont/imagenes/tema1/glyphicons_036_file.png') }}" width=16 height=16></a></td>                
        </tr>   
        {% endfor %}            
    </table>    
<!-- </div> -->

{% endblock %}