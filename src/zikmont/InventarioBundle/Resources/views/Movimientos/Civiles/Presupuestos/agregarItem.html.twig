{% extends 'zikmontFrontEndBundle::layout_app_limpio.html.twig' %}
{% block content %}
    <div class="left_articles"><br />                
        <!-- Formulario de busqueda -->    
        <form id="FrmBusqueda" action="{{ path('movimientos_civiles_presupuestos_agregar_item', {'codigoMovimientoCivilPresupuesto': arMovimientoCivilPresupuesto.codigoMovimientoCivilPresupuestoPk}) }}" method="POST" novalidate>
        <div class="well">
            <table class="main-all-table-form">
                <tr>                
                    <td class="td-label">Item:</td>
                    <td class="td-in" ><input type="text" class="span2" name="TxtCodigoItem" {% if Ultima_Codigo is defined %} value="{{Ultimo_Codigo}}" {% endif%} onkeypress="return validarNumeros(event)" onclick="this.select()"  size="15"/></td>
                </tr>   
                <tr>                
                    <td class="td-label">Descripcion:</td>
                    <td class="td-in" ><input type="text" class="span6" name="TxtDescripcionItem" {% if Ultima_Descripcion is defined %} value="{{Ultima_Descripcion}}" {% endif%} onclick="this.select()" size="15" autofocus="true"/></td></td>
                </tr>
                <tr>                
                    <td></td>
                    <td><button class="btn btn-primary btn-mini" type="submit" name="OpSubmit" value="OpActualizarDetalles">Buscar</button></td>
                </tr>            
            </table>
        </div>    
        </form>                
        <p class="description"><h2>Agregar item a un movimiento</h2></p>      
        <form id="FrmListado" action="{{ path('movimientos_civiles_presupuestos_agregar_item', {'codigoMovimientoCivilPresupuesto': arMovimientoCivilPresupuesto.codigoMovimientoCivilPresupuestoPk}) }}" method="post">        
        <table class="table table-striped table-bordered table-condensed">
            <tr>
                <th>Item</th>
                <th>Descripcion</th>
                <th>Iva</th>                
                <th>Existencia</th>
                <th>Remisiones</th>
                <th>Disponible</th>
                <th>Cantidad</th>
            </tr>
            
            {% for arMovimientosCivilesPresupuestosItems in arMovimientosCivilesPresupuestosItems %}
            <tr> 
                <td><input type="hidden" name="LblCodigoItem[]" value="{{ arMovimientosCivilesPresupuestosItems.codigoMovimientoCivilPresupuestoItemPk }}">{{ arMovimientosCivilesPresupuestosItems.codigoMovimientoCivilPresupuestoItemPk }}</td>  
                <td>{{ arMovimientosCivilesPresupuestosItems.descripcion }}</td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td><input class="input-grid" type="text" name="TxtCantidad[]" value="0" size="5" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()" /></td>                               
            </tr>
            {% endfor %}                                
        </table>
        
        <div class="divDerecho">
            <button class="btn btn-primary btn-mini" type="submit" name="register_submit" id="register_submit">Agregar Seleccionados</button><br>
        </div>
        </form>        
    </div>
{% endblock %}