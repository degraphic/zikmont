{% extends 'zikmontFrontEndBundle::layout_app.html.twig' %}
{% import 'zikmontFrontEndBundle:Plantillas:macros.html.twig' as utilidades %}
{% block content %}    
    <div class="page-header">
        <h1>Lista presupuestos: <small><label id="lblNombreDocumento">Obras Civiles</label></small></h1>
    </div>              
    <form action="{{ path('movimientos_civiles_presupuestos_lista') }}" method="post" novalidate>
        <table  class="table table-striped table-bordered table-condensed">
            <tr>
                <th>ID</th>                
                <th>Fecha</th>
                <th>Nombre</th>
                <th>Nit</th>            
                <th>Cliente</th>            
                <th>Comentarios</th>
                <th></th>
                <th></th>
            </tr>

            {% for arMovimientosCivilesPresupuestos in arMovimientosCivilesPresupuestos %}

            <tr>
                <td><input type="hidden" name="LblCodigoMovimientoCivilPresupuesto[]" value="{{ arMovimientosCivilesPresupuestos.codigoMovimientoCivilPresupuestoPk }}">{{ arMovimientosCivilesPresupuestos.codigoMovimientoCivilPresupuestoPk }} </td>
                <td>{{ arMovimientosCivilesPresupuestos.fecha |date("Y/m/d")  }}</td>
                <td>{{ arMovimientosCivilesPresupuestos.nombrePresupuesto }}</td>
                <td>{{ arMovimientosCivilesPresupuestos.codigoTerceroFk }}</td>  
                <td>{{ arMovimientosCivilesPresupuestos.terceroRel.nombreCortoTercero }}</td>  
                <td>{{ arMovimientosCivilesPresupuestos.comentarios}}</td>                                
                <td style="text-align: center"><a href="{{ path('movimientos_civiles_presupuestos_detalle', { 'codigoMovimientoCivilPresupuesto': arMovimientosCivilesPresupuestos.codigoMovimientoCivilPresupuestoPk }) }}"><img src="{{ asset('bundles/zikmont/imagenes/tema1/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arMovimientosCivilesPresupuestos.codigoMovimientoCivilPresupuestoPk }}" /></td>            
            </tr>

            {% endfor %}            

        </table>        
        
        <!-- Botones Menu Items -->
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">    
                <a class="btn btn-mini" id="{{ path('movimientos_civiles_presupuestos_nuevo') }}" href="#" data-reveal-id="nuevoMovimientoModal" data-animation="fade">Nuevo</a>
                <button class="btn btn-danger btn-mini" type="submit" name="OpSubmit" value="OpEliminar" >Eliminar</button>

            </div>                   
        </div>                            
        <!-- Fin Botones Menu Items -->         
    </form> 
    <br /><br />
    <hr/>              
              
</div>
{% endblock %}
