{# src/Acme/SecurityBundle/Resources/views/Security/login.html.twig #}
<style type="text/css">


        .form-signin {
            max-width: 300px;
            padding: 19px 29px 29px;
            margin: 0 auto 20px;
            background-color: #fff;
            border: 1px solid #e5e5e5;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
        }
        .form-signin .form-signin-heading,
        .form-signin .checkbox {
            margin-bottom: 10px;
        }
        .form-signin input[type="text"],
        .form-signin input[type="password"] {
            font-size: 16px;
            height: auto;
            margin-bottom: 15px;
            padding: 7px 9px;
        }

</style>
{% if error %}
    <div>{{ error.message }}</div>
{% endif %}

    <br /><br /><br /><br />    
    <form class="form-signin" action="{{ path('login_check') }}" method="post">
        <h2 class="form-signin-heading">Inicio sesion</h2>
        <input type="text" class="input-block-level" placeholder="Usuario" id="username" name="_username">
        <input type="password" class="input-block-level" placeholder="Password" id="password" name="_password" >
        <label class="checkbox">
            <input type="checkbox" value="remember-me"> Recordarme
        </label>
        {#
            If you want to control the URL the user is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account" />
        #}        
        <button class="btn btn-large btn-primary" type="submit">Ingresar</button>
        <br /><br />
        <a href="{{ path('registro') }}">Nuevo usuario</a>
    </form>
    

