
{% extends 'zikmontFrontEndBundle::layout_app.html.twig' %}
{% block content %}
<div class="left_articles">                
    <p class="description"><h1>Consulta de Documentos Digitalizados<h1></p>          
            <hr/>

            <div class="tabbable tabs-left">

                <ul class="nav nav-tabs">
                    <li class="active">
                        <!-- Formulario Busqueda-->
                        <form class="well" action="{{ path('consultakardex') }}" method="post" >

                            <select id="cboDocumentos">
                                <option value="">---Seleccione Documento---</option>
                                <option value="1"> Menores iguales a 30 días </option>
                                <option value="1"> Mayores de 30 menores o iguales a 60 días</option>
                            </select><br><br>

                            <input class="span2" type="text" name="TxtNroDocumento" placeholder="Numero de Documento" /><br><br>

                            <input class="span2" type="text" name="TxtTercero" placeholder="Tercero" /><br><br>


                            <button class="btn btn-primary" type="submit" name="register_submit" id="register_submit">Buscar</button>  
                            <br/>
                    </li>
                </ul>

                </form>  

                <div id="documentosGestion" class="tab-content">
                    <table class="table table-striped table-bordered table-condensed">
                        <tr>
                            <th>Titulo</th>
                            <th>Fecha Carga</th>                    
                            <th>Número</th>
                            <th>Versión</th>
                            <th>Formato</th>
                            <th>Unidad</th>
                            <th>Comentarios</th>                                      
                            <th><input type="checkbox" name="ChkSeleccionar[]" /></th>            
                        </tr>
                    </table>

                    <div class="divDerecho">
                        <button class="btn btn-primary small" type="submit" name="register_submit" id="register_submit">Descargar Seleccionados</button>  
                    </div>
                </div>

            </div>

            <hr/>

            <br />

            </div>
{% endblock %}