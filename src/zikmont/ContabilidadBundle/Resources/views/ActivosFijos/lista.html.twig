{% extends 'zikmontFrontEndBundle::layout_app.html.twig' %}
{% block content %}    

    <div class="page-header">
        <h1>Activos fijos: </h1>
    </div>              
 
    <form action="{{ path('contabilidad_activos_fijos') }}" method="post" novalidate>                
        <table  class="table table-striped table-bordered table-condensed">

            <tr>
                <th>ID</th>
                <th>Fecha</th>
                <th>Tipo</th>
                <th>Nombre</th>
                <th>Ubicacion</th>
                <th>Costo</th>
                <th></th>
            </tr>

            {% for arCtbActivosFijos in arCtbActivosFijos %}
                <tr>
                    <td>{{ arCtbActivosFijos.codigoActivoFijoPk }}</td>
                    <td>{{ arCtbActivosFijos.fechaCompra |date("Y/m/d")  }}</td>
                    <td>{{ arCtbActivosFijos.ctbActivoFijoTipoRel.nombre }}</td>
                    <td>{{ arCtbActivosFijos.nombre }}</td>
                    <td>{{ arCtbActivosFijos.ubicacion }}</td>
                    <td style="text-align: right">{{ arCtbActivosFijos.costo | number_format(2, '.', ',') }}</td>               
                    <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arCtbActivosFijos.codigoActivoFijoPk }}" /></td>                                
                </tr>
            {% endfor %}            

        </table>   
        <!-- Botones Menu Items -->
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">    
                <a class="btn btn-mini" href="{{ path('contabilidad_activos_fijos_nuevo') }}" >Nuevo</a>
                <button class="btn btn-danger btn-mini" type="submit" name="OpSubmit" value="OpEliminar" >Eliminar</button>

            </div>                   
        </div>                            
        <!-- Fin Botones Menu Items -->     
    </form>   
    
</div>
{% endblock %}
