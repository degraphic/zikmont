
{% extends 'zikmontFrontEndBundle::layout_app.html.twig' %}
{% block content %}
    <div class="left_articles">                
        <p class="description"><h2>Seleccione el movimiento</h2></p>      
        <form action="{{ path('contabilidadagregarmovimientocierrecaja', {'codigoCierreCaja': arCierreCaja.codigoCierreCajaPk}) }}" method="POST" novalidate>
        <table class="table table-striped table-bordered table-condensed">
            <tr>
                <th>ID</th>
                <th>NÃºmero</th>
                <th>Fecha</th>
                <th>Total</th>
                <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodos(this);"/></th>
            </tr>

            {% for arMovimiento in arMovimientos %}
            <tr>
                <td><input type="hidden" name="LblCodigoCuentaCobrar[]" value="{{ arMovimiento.codigoMovimientoPk }}">{{ arMovimiento.codigoMovimientoPk }}</td> 
                <td>{{ arMovimiento.numeroMovimiento }}</td> 
                <td>{{ arMovimiento.fecha |date("Y/m/d") }}</td> 
                <td style="text-align: right">{{ arMovimiento.total | number_format(2, '.', ',') }}</td>  
                <td style="text-align: center"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arMovimiento.codigoMovimientoPk }}" /></td>
            </tr>
            {% endfor %}            

        </table>   
        <div class="divDerecho">
            <button class="btn btn-primary btn-mini" type="submit" name="OpSubmit" value="OpAgregar" >Agregar</button>            
        </div> 
        </form>
    </div>
{% endblock %}