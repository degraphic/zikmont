
{% extends 'zikmontFrontEndBundle::layout_app.html.twig' %}
{% block content %}
    <div class="left_articles">                
        <p class="description"><h2>Seleccione el movimiento</h2></p>      
        <form action="{{ path('asientosagregarcuentapagar', {'codigoAsiento': arAsiento.codigoAsientoPk}) }}" method="POST" novalidate>
        <table class="table table-striped table-bordered table-condensed">
            <tr>
                <th>ID</th>
                <th>NÃºmero</th>
                <th>Fecha</th>
                <th>Saldo</th>
                <th>$ Pagar</th>
                <th>Descripcion</th>
            </tr>

            {% for cuentapagar in arCuentasPagar %}
            <tr>
                <td><input type="hidden" name="LblCodigoCuentaPagar[]" value="{{ cuentapagar.codigoCuentaPagarPk }}">{{ cuentapagar.codigoCuentaPagarPk }}</td> 
                <td>{{ cuentapagar.movimientoRel.numeroMovimiento }}</td> 
                <td>{{ cuentapagar.fecha |date("Y/m/d") }}</td> 
                <td style="text-align: right">{{ cuentapagar.saldo | number_format(2, '.', ',') }}</td> 
                <td style="text-align: right"><input style="text-align: right; width:120px" type="text" name="TxtValor[]" onkeypress="return validarNumeros(event)"/></td> 
                <td><input style="width:200px" type="text" name="TxtDescripcionContable[]"/></td> 
            </tr>
            {% endfor %}            

        </table>   
        <div class="divDerecho">
            <button class="btn btn-primary btn-mini" type="submit" name="register_submit" id="register_submit">Agregar</button><br>
        </div> 
        </form>
    </div>
{% endblock %}